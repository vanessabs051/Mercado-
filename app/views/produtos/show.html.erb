          <label class = 'control-label'>Validade</label>
          <input readonly="true" class = 'form-control' value="<%= @produto.data_validade %>" />  
      </div>
    

      <div class="col-lg-3 form-group"> 
          <label class = 'control-label'>Marca</label>
          <input readonly="true" class = 'form-control' value="<%= @produto.marca %>" />  
