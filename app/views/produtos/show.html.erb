          <input readonly="true" class = 'form-control' value="<%= @produto.nome %>" />  
      </div>
     
 
      <div class="col-lg-2 form-group"> 
          <label class = 'control-label'>Tipo</label>
          <input readonly="true" class = 'form-control' value="<%= @produto.tipo %>" />  
