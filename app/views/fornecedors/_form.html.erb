<%= form_with(model: fornecedor) do |form| %>
  <% if fornecedor.errors.any? %>
    <div id="error_explanation" class="panel panel-danger mensagem-erro-cabecalho">
           <div class="panel-heading">
               <h3 class="panel-title"><%= pluralize(fornecedor.errors.count, "error(s)") %> ao salvar fornecedor:</h3>
            </div>
           <div class="panel-body">
             <ul>
             <% fornecedor.errors.full_messages.each do |message| %>
               <li><%= message %></li>
             <% end %>
             </ul>
           </div>
         </div>
  <% end %>

  <div class="row">
       <div class="col-lg-8 form-group">   
           <%= form.label :nome, :class => 'control-label required' %>
           <%= form.text_field :nome,  :class => 'form-control' %>
       </div>
        <div class="col-lg-4 form-group">   
           <%= form.label :telefone, :class => 'control-label required' %>
           <%= form.text_field :telefone, :class => 'form-control', :onkeypress=>"mask(this, mphone);", :onblur=>"mask(this, mphone);" %>
       </div>
  </div>

<div class="row">
       <div class="col-lg-4 form-group">   
           <%= form.label :cnpj_cpf, :class => 'control-label required' %>
           <%= form.text_field :nome,  :class => 'form-control' %>
       </div>
        <div class="col-lg-5 form-group">   
           <%= form.label :email, :class => 'control-label' %>
           <%= form.text_field :email, :class => 'form-control' %>
       </div>
       <div class="col-lg-3 form-group">   
           <%= form.label :cep, :class => 'control-label' %>
           <%= form.text_field :cep, :class => 'form-control' %>
       </div>
  </div>

  <div class="row">
       <div class="col-lg-6 form-group">   
           <%= form.label :logradouro, :class => 'control-label required' %>
           <%= form.text_field :logradouro,  :class => 'form-control' %>
       </div>
        <div class="col-lg-2 form-group">   
           <%= form.label :numero, :class => 'control-label required' %>
           <%= form.text_field :numero, :class => 'form-control' %>
       </div>
       <div class="col-lg-4 form-group">   
           <%= form.label :bairro, :class => 'control-label' %>
           <%= form.text_field :bairro, :class => 'form-control' %>
       </div>
  </div>

  <div class="row">
       <div class="col-lg-4 form-group">   
           <%= form.label :cidade, :class => 'control-label ' %>
           <%= form.text_field :cidade,  :class => 'form-control' %>
       </div>
        <div class="col-lg-4 form-group">   
            <%= form.label :estado, :class => 'control-label ' %>
            <%= form.text_field :estado,  :class => 'form-control' %>
        </div>
        </div>

  <div class="row">
          <div class="col-lg-7 form-group">  
            <%= link_to 'Voltar', fornecedors_path, :class => "btn btn-primary colorprimarybtn"%>
            <input type="submit" name="commit" class="btn btn-primary colorprimarybtn" value="Salvar " data-disable-with="Salvando" />
          </div>
      </div>
   <% end %>  